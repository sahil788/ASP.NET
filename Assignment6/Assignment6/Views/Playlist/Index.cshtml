@model IEnumerable<Assignment6.Models.PlaylistBaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>List of Playlists</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.Raw("Number of Tracks on this Playlist")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <span class="badge"> @Html.DisplayFor(modelItem => item.TracksCount)</span>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PlaylistId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PlaylistId }) 

        </td>
    </tr>
}

</table>
