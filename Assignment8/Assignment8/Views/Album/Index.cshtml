@model IEnumerable<Assignment8.Models.AlbumBaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>List of Albums</h2>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coordinator)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.UrlAlbum)" width="150" height="150"
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Coordinator)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id = item.Id })

        </td>
    </tr>
}

</table>
